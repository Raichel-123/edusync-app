extends header

block content
  script(src='/javascript/jquery.form.min.js')
  script(src='/javascript/login.js')
  script(src='/javascript/jquery.validate.min.js')
  link(rel='stylesheet', href='/stylesheets/style.css')
  .container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-login
        .panel-heading
          .row
            .col-xs-6
              a#login-form-link.active(href='#') Login
            .col-xs-6
              a#register-form-link(href='#') Register
          hr
        .panel-body
          .row
            .col-lg-12
              form#login-form(action='/user/login', method='post', role='form', style='display: block;')
                .form-group
                  input#username.form-control(type='text', name='usn', tabindex='1', placeholder='USN/Email', value='')
                .form-group
                  input#password.form-control(type='password', name='password', tabindex='2', placeholder='Password')
                .form-group.text-center
                  input#remember(type='checkbox', tabindex='3', name='remember')
                  label(for='remember')  Remember Me
                .form-group
                  .row
                    .col-sm-6.col-sm-offset-3
                      input#login-submit.form-control.btn.btn-login(type='submit', name='login-submit', tabindex='4', value='Log In')
                .form-group
                  .row
                    .col-lg-12
                      .text-center
                        a.forgot-password(href='http://phpoll.com/recover', tabindex='5') Forgot Password?
              form#register-form(action='/user/register', method='post', role='form', style='display: none;')
                .form-group
                  input#username.form-control(type='text', name='usn', tabindex='1', placeholder='Usn', value='')
                .form-group
                  input#email.form-control(type='email', name='email', tabindex='1', placeholder='Email Address', value='')
                .form-group
                  input#email.form-control(type='text', name='name', tabindex='1', placeholder='Name', value='')
                .form-group
                  input#password.form-control(type='password', name='password', tabindex='1', placeholder='Password')
                .form-group
                  input#confirm-password.form-control(type='password', name='confirm-password', tabindex='1', placeholder='Confirm Password')
                .form-group
                  input#email.form-control(type='number', name='marks10', tabindex='1', placeholder='10th Marks', value='')
                .form-group
                  input#email.form-control(type='number', name='marks12', tabindex='1', placeholder='12th Marks', value='')
                .form-group
                  input#email.form-control(type='number', name='engg', tabindex='1', placeholder='Engineering Marks', value='')
                .form-group
                  .row
                    .col-sm-6.col-sm-offset-3
                      input#register-submit.form-control.btn.btn-register(type='submit', name='register-submit', tabindex='4', value='Register Now')
          .alert.alert-danger#error(role='alert', style="visibility: hidden;")
            span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
            span.sr-only Error:
            |   Enter a valid Usn and Password

          if error==true
            .alert.alert-danger#error(role='alert')
              span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
              span.sr-only Error:
              |!{message}
